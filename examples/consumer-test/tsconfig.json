{
  "compilerOptions": {
    "skipLibCheck": false, // IMPORTANT: Validates our type outputs
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "declaration": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"]
  },
  "include": ["./*.tsx"]
}
